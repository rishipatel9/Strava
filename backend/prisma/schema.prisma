generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  imageUrl  String?
  post      Post[]
  likes     Like[]
  comments  Comment[]
  incident  Incidents[]
}

model Incidents {
  id          String  @id @default(cuid())
  title       String?
  description String?
  imageUrl    String?
  latitude    String?
  longitude   String?
  coordinates String?
  userId      String
  user        User    @relation(fields: [userId], references: [id])
}

model Post {
  id        String   @id @default(cuid())
  title     String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  location  Json?    // Ensure location is JSON instead of geography
  likes     Like[]
  comments  Comment[]
}

model Like {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
  createdAt DateTime @default(now())
}
